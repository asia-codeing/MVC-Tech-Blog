<div class="card">
    <h3 class="card-header-edit">EDIT POST</h3>
    <form class="card-body-edit edit-post-form">
        <input type="hidden" name="post-id" value="{{post.id}}">
        <label for="post-title" class="form-lable">TITLE</label>
        <input type="text" name="post-title" value="{{post.title}}" class="form-input" />
        <label for="content" class="form-lable">CONTENT</label>
        <input  type="text" name="content" value="{{post.content}}" class="form-input" />
        <button type="submit" class="btn update-post-btn">UPDATE POST</button>
        <button type="button" class="btn delete-post-btn">DELETE POST</button>
    </form>
</div>

<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>